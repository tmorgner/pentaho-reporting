            <id>resolve-compile</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/lib</outputDirectory>
              <includeScope>compile</includeScope>
              <excludeScope>provided</excludeScope>
            </configuration>
          </execution>
          <execution>
            <id>resolve-test</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
