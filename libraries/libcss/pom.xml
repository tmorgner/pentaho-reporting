	<name>LibBase</name>
	<description>
		LibBase is a library developed to provide base services like
		logging, configuration and initialization to all other libraries
		and applications. The library is the root library for all other
		Pentaho-Reporting projects.
	</description>

	<organization>
		<url>http://reporting.pentaho.org/libbase</url>
	</organization>

	<dependencies>
    <dependency>
      <groupId>org.pentaho.reporting.library</groupId>
      <artifactId>libloader</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.pentaho.reporting.library</groupId>
      <artifactId>libfonts</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.pentaho.reporting.library</groupId>
      <artifactId>flute</artifactId>
      <version>${project.version}</version>
    </dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

</project>